@model List<Category>
@{
    ViewData["Title"] = "Education";
}
<h1>Category List:</h1>

<a asp-controller="Category" asp-action="Create">
    Create category
</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Number
            </th>
            <th>
                Category Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model)
        {
            <tr>
                <td>
                    @category.Id
                </td>
                <td>
                    @category.Name
                </td>
            </tr>
        }
    </tbody>
</table>