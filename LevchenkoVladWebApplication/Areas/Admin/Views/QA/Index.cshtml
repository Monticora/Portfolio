@model List<QuestionAndAnswer>
@{
    ViewData["Title"] = "QA";
}
<h1>QA List:</h1>

<a asp-controller="QA" asp-action="Create">
    Create QA
</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Question
            </th>
            <th>
                Answer
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var qa in Model)
        {
            <tr>
                <td>
                    @qa.Question
                </td>
                <td>
                    @qa.Answer
                </td>
                <td>
                   <div class="w-75 btn-group" role="group">
                        <a asp-controller="QA" asp-action="Edit" asp-route-id="@qa.Id" class="btn btn-primary mx-2">
                            Edit
                        </a>
                        <a asp-controller="QA" asp-action="Delete" asp-route-id="@qa.Id" class="btn btn-danger mx-2">
                            Delete
                        </a>
                   </div>
                </td>
            </tr>
        }
    </tbody>
</table>