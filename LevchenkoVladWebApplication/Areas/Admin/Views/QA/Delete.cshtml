@model QuestionAndAnswer
@{
    ViewData["Title"] = "Delete QA";
}
<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete QA</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Question"></label>
            @Html.Raw(Model.Question)
        </div>
        <div class="mb-3">
            <label asp-for="Answer"></label>
            @Html.Raw(Model.Answer)
        </div>
        <button type="submit" class="btn btn-primary" styly="width:150px">Delete</button>
        <a asp-controller="QA" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>