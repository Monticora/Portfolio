@model List<Subcategory>
@{
    ViewData["Title"] = "Subcategory";
}
<div>
    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Back
    </a>
</div>
<h1>Subcategory List:</h1>

@if (User.IsInRole(StaticDetails.Roles.Role_Admin))
{
    <a asp-controller="Subcategory" asp-action="CreateOrUpdate">
        Create subcategory
    </a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Subcategory Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subcategory in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="QA" asp-action="Index" asp-route-id="@subcategory.Id" class="btn btn-primary mx-2">
                            @subcategory.Name
                        </a>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Subcategory" asp-action="CreateOrUpdate" asp-route-id="@subcategory.Id" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller="Subcategory" asp-action="Delete" asp-route-id="@subcategory.Id" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Subcategory Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subcategory in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="QA" asp-action="Index" asp-route-id="@subcategory.Id" class="btn btn-primary mx-2">
                            @subcategory.Name
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
