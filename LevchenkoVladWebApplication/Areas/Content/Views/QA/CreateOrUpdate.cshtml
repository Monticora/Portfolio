@model QAViewModel
@{
    ViewData["Title"] = "QA";
}
<form method="post">
    <input asp-for="QA.Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@(Model.QA.Id != 0?"Update":"Create") QA</h2>
            <hr/>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="QA.Question" text-muted></label>
            <textarea asp-for="QA.Question"></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="QA.Answer" text-muted></label>
            <textarea asp-for="QA.Answer"></textarea>
        </div>
        <div class="mb-3">
            <label text-muted>Choose category:</label>
            <select asp-for="QA.SubcategoryId" asp-items="@Model.SubcategoryList">
            </select>
            <span asp-validation-for="QA.SubcategoryId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" styly="width:150px">@(Model.QA.Id != 0 ? "Update" : "Create") QA</button>
        <a asp-controller="QA" asp-action="Index" asp-route-id="@Model.QA.SubcategoryId" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount checklist mediaembed casechange export formatpainter pageembed linkchecker a11ychecker tinymcespellchecker permanentpen powerpaste advtable advcode editimage advtemplate ai mentions tinycomments tableofcontents footnotes mergetags autocorrect typography inlinecss',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table mergetags | addcomment showcomments | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist indent outdent | emoticons charmap | removeformat',
            tinycomments_mode: 'embedded',
            tinycomments_author: 'Author name',
            mergetags_list: [
                { value: 'First.Name', title: 'First Name' },
                { value: 'Email', title: 'Email' },
            ],
            ai_request: (request, respondWith) => respondWith.string(() => Promise.reject("See docs to implement AI Assistant")),
        });
    </script>
}